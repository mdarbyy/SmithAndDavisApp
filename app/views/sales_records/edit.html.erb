<div class="flex-fill d-flex flex-column m-1">
  <div id="content-header">
    <div class="row">
      <div class="col-4">
        <%= link_to 'Cancel', sales_records_path, class: 'btn btn-main btn-left' %>
      </div>
      <div class="col-4 d-flex justify-content-center">
        <h1>Edit Sales Record</h1>
      </div>
      <div class="col-4 d-flex justify-content-end">
      </div>
    </div>
  </div>

  <div class="card m-1" id="content-main">
    <div class="card-body scrollable-form">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
          <%= render "edit_form", sales_record: @sales_record %>
        </div>
      </div>
    </div>
  </div>
</div>
