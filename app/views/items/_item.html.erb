<tr>
  <td><%= link_to item.name, edit_item_path(item), class: "nav-link" %></td>
  <td>
    <% unless item.sales_records.present? %>
      <button class="btn btn-delete"
      type="button"
      data-entity="items"
      data-entity-name="Item"
      data-id="<%= item.id %>"
      onclick="deleteEntity(event)">
      Delete
    </button>
    <% end %>
  </td>
</tr>