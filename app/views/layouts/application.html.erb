    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>

    <%= javascript_importmap_tags %>

    <style>
      html, body {
        height: 100%;
        width: 100%;
        margin: 0px;
        padding: 0px;
        font-family: 'Quicksand';
      }

      th.stick {
        background-color: white;
        cursor: pointer;
        position: sticky;
        text-align: center;
        top: 0; 
      }

      th, td {
        text-align: center;
        width: 100px;
      }

      th:hover {
        cursor: pointer;
      }

      #alertContainer {
        position: fixed;
        right: 50%;
        top: 1em;
        transform: translateX(50%);
        z-index: 9999;
      }

      #alertContainerUnauthenticated {
        position: absolute;
        top: 10px;
      }

      #content-main {
        height: calc(100vh - 70px - 75px);
        overflow: hidden; /* hide overflow, keep height fixed */
        display: flex;
        flex-direction: column;
      }

      #content-search {
        flex: 1;
        margin-right: 5px;
        box-shadow: 0 .05rem .05rem rgba(0, 0, 0, 0.05) !important;
      }

      #nav-sidebar {
        background-color: #193856; 
        color: white; 
        height: 100vh; 
        left: 0;
        position: fixed;
        top: 0;
        width: 250px;
        max-width: 250px;
        min-width: 250px;
        z-index: 9999;
      }

      #nav-sidebar .list-group-item {
        background-color: #193856; 
        border: none;
        padding: 0;
      }  

      #nav-sidebar .sidebar-nav-link {
        color: white;
        display: block;
        font-size: 16px;
        padding: 15px 20px;
        text-decoration: none;
      }

      #nav-sidebar .sidebar-nav-link:hover, .sidebar-nav-link.active {
        background-color: #052748;
        color: white !important;
      }

      #overlay {
        display: none;
        position: fixed; 
        top: 0; 
        left: 0; 
        width: 100%; 
        height: 100%; 
        background-color: rgba(0,0,0,0.5);
        z-index: 9999;
      }

      #recordCount{
        margin-top: auto;
        text-align: center;
      }

      #spinner{
        z-index: 9999; 
        width: 100px; 
        height: 100px;
        color: #193856;
      }

      .authenticated {
        background: white;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
      }

      .authenticated, .unauthenticated {
        height: 100%; 
        overflow: hidden;
      }

      .brand {
        font-family: 'Handjet';
      }

      .bootstrap-select > .dropdown-toggle, /* dropdown box */
      .bootstrap-select > .dropdown-toggle:focus, /* dropdown :focus */
      .bootstrap-select > .dropdown-toggle:hover /* dropdown :hover */
      {
        background-color: #e3e7ebff !important;
      }

      .btn-delete {
        background-color: #a8504b;
        color: white !important;
      }

      .btn-delete:hover,
      .btn-delete:focus,
      .btn-delete:active{
        background-color: #964642 !important;
        color: white !important;
      }

      .btn-main {
        background-color: #193856 !important;
        color: white !important;
      }

      .btn-main:hover,
      .btn-main:focus,
      .btn-main:active{
        background-color: #052748 !important;
        color: white !important;
      }

      .btn-left {
        margin-left: 5px;
        margin-top: 10px;
      }

      .btn-right {
        margin-right: 5px; 
        margin-top: 10px;
      }

      .card {
        box-shadow: 0 .5rem .5rem rgba(0, 0, 0, 0.10);
      }

      .custom-modal {
        max-height: 90vh;
      }

      .dashboard-card {
        box-shadow: 0 .5rem .5rem rgba(0, 0, 0, 0.10) !important;
      }

      .dashboard-content {
        height: calc(100vh - 210px);
        width: 100%;
      }

      .dashboard-row {
        height: calc(100vh - 70px);
      }

      .datepicker table tr td.active, .datepicker table tr td.active:hover{
        background-image: none;
        background-color: #193856 !important;
      }

      .dropdown-item.nav-link:focus,
      .dropdown-item.nav-link:active,
      .dropdown-item.nav-link.active {
        background-color: inherit; /* Keep the background color the same as the original */
        box-shadow: none; /* Remove any box-shadow that might be applied */
        color: inherit; /* Keep the text color the same as the original */
        outline: none; /* Remove the outline */
      }

      .dropdown-item.nav-link:focus-visible {
        outline: none; /* Ensure links don't turn blue when focused */
      }

      .form-container {
        max-width: 450px;
        width: 100%;
      }

      .form-container h3 {
        margin-bottom: 20px;
        text-align: center;
      }

      .form-section {
        align-items: center;
        background-color: white;
        display: flex;
        flex-direction: column; /*stack vertically */
        flex: 1;
        justify-content: center;
        padding: 20px;
        position: relative;
      }

      .image-section {
        background-image: url('<%= asset_path("sign_in.png") %>');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        flex: 3;
      }

      input.form-control.datepicker {
        height: 38px;               /* Match Bootstrap input height */
        padding: 6px 12px;         /* Match Bootstrap input padding */
        border: 1px solid #ced4da; /* Bootstrap border color */
        border-radius: 4px;        /* Bootstrap border radius */
        box-sizing: border-box;    /* Ensure padding doesn't increase total size */
        font-size: 1rem;           /* Default font size */
        line-height: 1.5;          /* Bootstrap line height */
      }

      .list-group-item {
        border: none;
        text-align: center;
      }

      .logo {
        width: 230px;
        margin-top: 10px;
      }

      .main-content {
        flex-grow: 1;
        display: flex;
        flex-direction: column; 
        overflow-x: hidden;
        scrollbar-width: none;
        margin-top: 70px;
        height: 100vh;
        overflow-y: hidden;
      }

      .main-content::-webkit-scrollbar {
        display: none;
      }

      .modal-content {
        width: 750px !important;
      }

      .nav-link, .nav-link:visited {
        color: #193856;
      }

      .nav-link:hover {
        color: #052748;
      }

      /* goes with .custom-modal */
      .scrollable-table {
        max-height: 85vh;
      }

      .scrollable-form {
        flex-grow: 1;
      }
      
      .scrollable-form, .scrollable-table, #content-scroll {
        overflow-y: auto;
        scrollbar-width: none;
      }

      .scrollable-form::-webkit-scrollbar, #content-scroll::-webkit-scrollbar {
        display: none; /* For Chrome, Safari, and Edge */
      }

      .search-form {
        height: 40px;
        margin-top: 5px;
        max-width: 300px;
        width: 100%;
      }

      .select2-container--default .select2-results__option--highlighted[aria-selected] {
        background-color: #193856 !important;
        color: white !important;
      }

      .select2-container--default .select2-selection--single {
        height: 38px;
        padding: 6px 12px;
        border: 1px solid #ced4da;
        border-radius: 4px;
      }

      .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: 38px;
      }

      .select2-container--default .select2-selection--single .select2-selection__rendered {
        line-height: 24px;
      }

      .separator {
        border: 1px solid black;
        margin-top: 20px;
        margin-bottom: 20px;
        border-radius: 1px;
      }

      .unauthenticated {
        display: flex;
        height: 100vh;
      }

      @media (max-width: 767.98px) {
        .custom-modal {
          margin-left: 250px !important;
          margin-right: auto !important;
        }
      }

      @media(max-height: 594px){
        .custom-modal{
          max-height: 80vh;
        }
        .scrollable-table {
          max-height: 75vh;
        }
      }

    </style>
  </head>

  <body>
    <div style="height: 0;">
      <div id="alertContainer"></div>
      <div id="overlay">
        <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
          <div class="spinner-border" id="spinner" role="status"></div>
        </div>
      </div>
    </div>

    <% if user_signed_in? %>
      <div class="d-flex flex-column h-100 authenticated">
        <div class="container-fluid h-100 d-flex flex-row p-0">
        
        <!-- Navigation Sidebar -->
        <div class="position-relative d-flex flex-column" id="nav-sidebar">
          
          <div class="row">
