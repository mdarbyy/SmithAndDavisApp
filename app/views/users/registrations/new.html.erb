<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <div class="form-group mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :first_name,"First Name", class: 'form-label' %>
    <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :last_name, "Last Name", class: 'form-label' %>
    <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation, "Retype Password", class: 'form-label' %><br />
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "Sign up", class: "btn btn-main" %>
  </div>

  <div class="text-center mt-3">
    Already have an account? 
    <%= link_to "Sign in", new_session_path(resource_name), class: "link-primary", style:"color: #193856 !important" %>
  </div>
<% end %>