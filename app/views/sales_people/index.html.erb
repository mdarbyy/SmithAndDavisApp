  function loadMoreRecords() {
    if (isLoading) return;
    console.log("Loading Sales People");
    const currentVisibleCount = $('#content-table tbody tr').length;

    $.ajax({
      url: "sales_people",
      data: { offset: currentVisibleCount },
      type: 'GET',
      dataType: 'script',
      cache: true,
      beforeSend: function(){
        isLoading = true;
        $("#loading-spinner").show();
      },
      success: function(data) {
        console.log("Loaded Sales People");
        var rowCount = $('#content-table tbody tr').length;
        $('#currentCount').text(rowCount);
      },
      error: function(jqXHR, textStatus, errorThrown) {
        console.error("AJAX Error:", textStatus, errorThrown);
      },
      complete: function(){
        isLoading = false;
        $("#loading-spinner").hide();
      }
    });
  }
</script>