<tr>
  <td><%= link_to sales_person.first_name + " " + sales_person.last_name, edit_sales_person_path(sales_person), class: "nav-link" %></td>
  <td>
    <% sales_records = SalesRecord.where(sales_person_id: sales_person.id) %>
    <% unless sales_records.present? %>
      <%= button_to 'Delete', sales_person_path(sales_person), method: :delete, class: 'btn btn-delete btn-right', onclick: "confirmAndShowSpinner(event, 'Are you sure you want to delete this Sales Person?')", style:"margin-top: 0;" %>
    <% end%>
  </td>

</tr>