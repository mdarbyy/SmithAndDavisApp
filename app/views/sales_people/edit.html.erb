<div class="flex-fill d-flex flex-column m-1">
  <div id="content-header">
    <div class="row">
      <div class="col-4">
        <%= link_to 'Cancel', sales_people_path, class: 'btn btn-main btn-left' %>
      </div>
      <div class="col-4 d-flex justify-content-center">
        <h1>Edit Sales Person</h1>
      </div>
      <div class="col-4 d-flex justify-content-end">
        <%= button_to 'Delete', sales_person_path(@sales_person), method: :delete, class: 'btn btn-delete btn-right', onclick:"show_spinner()" %>
      </div>
    </div>
  </div>

  <div class="card m-1" id="content-main">
    <div class="card-body">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
          <%= render "form", sales_person: @sales_person %>
        </div>
      </div>
    </div>
  </div>
</div>